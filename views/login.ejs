<!DOCTYPE html>
<html lang="en">
  <head>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link
      rel="stylesheet"
      href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css"
    />
    <link rel='stylesheet' type='text/css'  href="/style.css" />
    <meta charset="utf-8" />
    <title>Login</title>
    <h1>Login</h1>
  </head>

  <body>
    <div class="loginForm">
      <form class="text-center border border-light p-4" action="/login" method="POST">
        <label>Username</label>
        <br/>
        <input 
            type="text" 
            name="username" 
            id="data" 
            required 
            class="form-control mb-3"/>
        <br/><br/><br/>

        <label>Password</label>
        <br/>
        <input 
            type="password" 
            name="password" 
            id="data" 
            min="8" 
            required 
            class="form-control mb-3"/>
        <br/><br/><br/>
        <div class="submitButton">
          <br /><br />
          <button type="submit" class="btn btn-danger btn-block my-4">
            Login
          </button>
          <div class='message'><%= msg %></div>
          </div>
      </form>
    </div>
    <form action="/registration">
      <button type="submit" name="registration">Register</button>
  </form>
  </body>
</html>
